{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <table class="table" style="text-align:left; border-spacing:15px;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ product.content }}</td>
            </tr>
    </table>
    <a href="{{ path('product_index') }}">Retour Ã  la liste des produits</a>
{% endblock %}